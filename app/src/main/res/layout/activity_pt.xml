<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sankar.kjsr7.pkActivity">


    <ImageView
        android:id="@+id/imageView5pt"
        android:layout_width="wrap_content"
        android:layout_height="200dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY"
        android:src="@drawable/pt" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5pt"
        android:layout_marginTop="14dp"
        android:id="@+id/scrollView2">


        <TextView
            android:id="@+id/textView13pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView5pt"
            android:layout_marginTop="11dp"
            android:text="@string/pt"
            android:textAlignment="gravity"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5pt"
        android:layout_centerHorizontal="true"
        android:text="Registrations Ended"
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>


